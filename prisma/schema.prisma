generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  wins      Int      @default(0)
  losses    Int      @default(0)
  createdAt DateTime @default(now())
}

model Fact {
  id        String   @id @default(cuid())
  text      String
  stars     Int      @default(0)
  createdAt DateTime @default(now())
}